<h2 class="h2">Our site has everything you need</h2> <br>

  <div class="container-2">

<%= stylesheet_link_tag "register" %>

<h4 ">Register and start your work.</h4> 
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control", placeholder: "Enter your email (a.b.c@gmail.com)" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    
    <% end %><br />
    <%=  f.password_field :password, autocomplete: "new-password",class: "form-control", placeholder: "Enter your password (123456)"%>
  </div>

  <div class="field"><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control", placeholder: "Enter your password (123456)" %>
  </div><br>

  <div class="actions">
    <%= f.submit "Sign up", data: {turbo: false}, class: "btn btn-primary" %>
    <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-primary" %>
  </div><br>
<% end %>


</div>


</body>